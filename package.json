{
  "name": "stack-overflow-backend",
  "version": "1.0.0",
  "description": "High-performance Stack Overflow-like backend with Express, TypeScript, and PostgreSQL",
  "license": "ISC",
  "author": "Priyanshu Joshi",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/infrastructure/db/migrate.ts",
    "migrate:up": "ts-node src/infrastructure/db/migrate.ts up",
    "migrate:down": "ts-node src/infrastructure/db/migrate.ts down",
    "migrate:status": "ts-node src/infrastructure/db/migrate.ts status",
    "migrate:reset": "ts-node src/infrastructure/db/migrate.ts reset"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
